{
  "name": "lovable-referral-tester",
  "version": "1.0.0",
  "description": "Sistema de testes em escala para plataforma de indicação",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "test": "node src/index.js",
    "test:small": "node src/index.js --users=10",
    "test:medium": "node src/index.js --users=100",
    "test:large": "node src/index.js --users=1000",
    "install:browsers": "playwright install chromium",
    "validate": "node scripts/validate-setup.js",
    "setup": "npm install && npm run install:browsers && npm run validate",
    "web": "node src/web/server.js",
    "start": "node src/web/server.js",
    "dev": "node src/web/server.js"
  },
  "keywords": [
    "testing",
    "automation",
    "referral",
    "playwright"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@playwright/test": "^1.48.0",
    "axios": "^1.7.9",
    "chalk": "^5.4.1",
    "dotenv": "^16.4.7",
    "express": "^4.22.1",
    "html-entities": "^2.6.0",
    "inboundemail": "^0.19.0",
    "mailslurp-client": "^16.0.0",
    "ora": "^8.1.1",
    "p-limit": "^6.1.0",
    "playwright": "^1.48.0",
    "socket.io": "^4.8.3"
  },
  "devDependencies": {
    "@types/node": "^22.10.2"
  }
}
